#!/bin/bash
echo "" > build/saga.js
cat src/saga.js >> build/saga.js
cat src/util.js >> build/saga.js
cat src/debug.js >> build/saga.js
cat src/event.js >> build/saga.js
cat src/net.js >> build/saga.js
cat src/dom.js >> build/saga.js
cat src/browser.js >> build/saga.js
cat src/holder.js >> build/saga.js
cat src/asset.js >> build/saga.js
cat src/route.js >> build/saga.js
cat src/asset-manager.js >> build/saga.js
cat src/font-manager.js >> build/saga.js
cat src/image.js >> build/saga.js
cat src/keyboard.js >> build/saga.js
cat src/abracadabra.js >> build/saga.js

uglifyjs build/saga.js -mc > build/saga.tmp.js
cat src/libs/underscore-min.js >  build/saga-min.js
echo "" >> build/saga-min.js
cat build/saga.tmp.js >> build/saga-min.js
rm build/saga.tmp.js

cp build/saga.js examples/basic/public_html/app/libs/saga.js
cp build/saga-min.js examples/basic/public_html/app/libs/saga-min.js
